<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="34dp"
    android:elevation="12dp"
    android:layout_margin="@dimen/size8sp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1efef"
    android:orientation="vertical"
    android:padding="@dimen/size14sp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sự kiện"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size6sp"
        android:text="06/08/2019"
        android:textColor="#000000"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size4sp"
        android:text="Bách Khoa Hà Nội"
        android:textColor="#000000"
        android:textStyle="italic" />

</LinearLayout>

</androidx.appcompat.widget.CardView>