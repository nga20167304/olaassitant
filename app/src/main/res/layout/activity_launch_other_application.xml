<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="24px">

    <TextView
        android:id="@+id/txvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google speech to text"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvResult"
        android:layout_marginTop="@dimen/size14sp"
        android:hint="Search in youtube"
        android:textColor="#000000"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnSearchYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtYoutube"
        android:text="Search in youtube" />

    <EditText
        android:id="@+id/edtZing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSearchYoutube"
        android:layout_marginTop="@dimen/size14sp"
        android:hint="Search in mp3"
        android:textColor="#000000"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnSearchZing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtZing"
        android:text="Search in Zing" />
 <EditText
        android:id="@+id/edtTTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSearchZing"
        android:layout_marginTop="@dimen/size14sp"
        android:hint="Text to speech"
        android:textColor="#000000"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnTTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTTS"
        android:text="Search in Zing" />

    <!--<Button-->
    <!--android:layout_below="@id/txvResult"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:onClick="launchGoogleSpeech2Text"-->
    <!--android:text="Speech to text" />-->

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_microphone"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/rippelColor" />

</RelativeLayout>